<article>
  <%= link_to product_path(product) do %>
    <%= image_tag product.image.thumb.url , alt: product.name %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div class="d-flex">
  <% btn_class = 'btn' %>
  <% if product.quantity == 0 %>
    <% btn_class = 'btn disabled' %>
    <h3 class="btn bg-danger text-white">Sold Out</h3>
  <% end %>
    <%= button_to add_item_cart_path(product_id: product.id), class: btn_class ,
    method: :post do %>
      <%= fa_icon "shopping-cart", text: 'Add' %> 
    <% end %>
  </div>
</article>
