<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you, <%= @order.email %> for your order!</h4>
    <h6>Your order summary:</h6>
  </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
      </thead>
      <tbody>
        <% @item.each do |item| %>
          <%= render 'summary', i: item %>
        <% end %>
      </tbody>

      <tfoot>
        <tr>
        <th colspan="4">
          TOTAL:
        </th>
        <th>
        <span>$</span><%= @order.total_cents / 100.0 %>
      </tfoot>
    </table>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
